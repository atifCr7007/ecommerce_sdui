{
  "screenId": "home",
  "title": "Onemart Home",
  "theme": {
    "primaryColor": "#9C27B0",
    "secondaryColor": "#E1BEE7",
    "backgroundColor": "#FFFFFF",
    "textColor": "#212121",
    "cardColor": "#FAFAFA",
    "dividerColor": "#E0E0E0"
  },
  "components": [
    {
      "type": "column",
      "properties": {
        "mainAxisAlignment": "start",
        "crossAxisAlignment": "stretch"
      },
      "children": [
            {
              "type": "carousel",
              "id": "main_carousel",
              "properties": {
                "images": [
                  "https://images.unsplash.com/photo-1441986300917-64674bd600d8?w=800&h=400&fit=crop&crop=center",
                  "https://images.unsplash.com/photo-1472851294608-062f824d29cc?w=800&h=400&fit=crop&crop=center",
                  "https://images.unsplash.com/photo-1560472354-b33ff0c44a43?w=800&h=400&fit=crop&crop=center",
                  "https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?w=800&h=400&fit=crop&crop=center"
                ],
                "autoPlay": true,
                "autoPlayInterval": 4,
                "showIndicators": true,
                "height": 280,
                "fullWidth": true
              }
            },
            {
              "type": "sizedbox",
              "properties": {
                "height": 20
              }
            },
            {
              "type": "categorytabs",
              "id": "category_tabs",
              "properties": {
                "title": "Shop by Category",
                "tabs": [
                  {
                    "id": "electronics",
                    "name": "Electronics",
                    "categoryId": "electronics"
                  },
                  {
                    "id": "clothing",
                    "name": "Clothing",
                    "categoryId": "clothing"
                  },
                  {
                    "id": "books",
                    "name": "Books",
                    "categoryId": "books"
                  },
                  {
                    "id": "home",
                    "name": "Home & Garden",
                    "categoryId": "home"
                  },
                  {
                    "id": "sports",
                    "name": "Sports",
                    "categoryId": "sports"
                  }
                ],
                "defaultTab": "electronics",
                "productLimit": 6
              }
            },
            {
              "type": "productlist",
              "id": "featured_products",
              "properties": {
                "title": "Featured Products",
                "isHorizontal": false,
                "limit": 6,
                "showViewAll": true
              }
            },
            {
              "type": "sizedbox",
              "properties": {
                "height": 20
              }
            },
            {
              "type": "productlist",
