            {
              "type": "sizedbox",
              "properties": {
                "height": 20
              }
            },
            {
              "type": "banner",
              "id": "promotional_banner",
              "properties": {
                "imageUrl": "https://images.unsplash.com/photo-1607082348824-0a96f2a4b9da?w=800&h=300&fit=crop&crop=center",
