                      "properties": {
                        "imageUrl": "https://images.unsplash.com/photo-1441984904996-e0b6ba687e04?w=400&h=500&fit=crop&crop=center",
                        "title": "New Arrivals",
                        "height": 200,
                        "borderRadius": 12
                      },
                      "action": {
                        "type": "navigate",
                        "route": "/new-arrivals"
                      }
                    }
