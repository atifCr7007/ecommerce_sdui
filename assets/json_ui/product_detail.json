{
  "screenId": "product_detail",
  "title": "Product Details",
  "theme": {
    "primaryColor": "#2196F3",
    "secondaryColor": "#FF5722",
    "backgroundColor": "#FFFFFF",
    "textColor": "#212121"
  },
  "components": [
    {
      "type": "scrollview",
      "properties": {
        "scrollDirection": "vertical"
      },
      "children": [
        {
          "type": "column",
          "properties": {
            "mainAxisAlignment": "start",
            "crossAxisAlignment": "stretch"
          },
          "children": [
            {
              "type": "container",
              "properties": {
                "height": 300,
                "backgroundColor": "#F5F5F5"
              },
              "children": [
                {
                  "type": "carousel",
                  "id": "product_images",
                  "properties": {
                    "images": [],
                    "showIndicators": true,
                    "height": 300
                  }
                }
              ]
            },
            {
              "type": "padding",
              "properties": {
                "padding": {
                  "all": 16
                }
              },
              "children": [
                {
                  "type": "column",
                  "properties": {
                    "crossAxisAlignment": "start"
                  },
                  "children": [
                    {
                      "type": "text",
                      "id": "product_title",
                      "properties": {
                        "text": "Product Title",
                        "fontSize": 24,
                        "fontWeight": "bold",
                        "color": "#212121"
                      }
                    },
                    {
                      "type": "sizedbox",
                      "properties": {
                        "height": 8
                      }
                    },
                    {
                      "type": "row",
                      "properties": {
                        "mainAxisAlignment": "spacebetween"
                      },
                      "children": [
                        {
                          "type": "text",
                          "id": "product_price",
                          "properties": {
                            "text": "$0.00",
                            "fontSize": 20,
                            "fontWeight": "bold",
                            "color": "#4CAF50"
                          }
                        },
                        {
                          "type": "row",
                          "children": [
                            {
                              "type": "text",
                              "properties": {
                                "text": "★",
                                "fontSize": 16,
                                "color": "#FF9800"
                              }
                            },
                            {
                              "type": "text",
                              "id": "product_rating",
                              "properties": {
                                "text": "4.5",
                                "fontSize": 14,
                                "color": "#757575"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "sizedbox",
                      "properties": {
                        "height": 16
                      }
                    },
                    {
                      "type": "divider",
                      "properties": {
                        "color": "#E0E0E0"
                      }
                    },
                    {
                      "type": "sizedbox",
                      "properties": {
                        "height": 16
                      }
                    },
                    {
                      "type": "text",
                      "properties": {
                        "text": "Description",
                        "fontSize": 18,
                        "fontWeight": "w600",
                        "color": "#212121"
                      }
                    },
                    {
                      "type": "sizedbox",
                      "properties": {
                        "height": 8
                      }
                    },
                    {
                      "type": "text",
                      "id": "product_description",
                      "properties": {
                        "text": "Product description will be loaded here...",
                        "fontSize": 14,
                        "color": "#757575"
                      }
                    },
                    {
                      "type": "sizedbox",
                      "properties": {
                        "height": 24
                      }
                    },
                    {
                      "type": "text",
                      "properties": {
                        "text": "Quantity",
                        "fontSize": 16,
                        "fontWeight": "w600",
                        "color": "#212121"
                      }
                    },
                    {
                      "type": "sizedbox",
                      "properties": {
                        "height": 8
                      }
                    },
                    {
                      "type": "row",
                      "properties": {
                        "mainAxisAlignment": "start"
                      },
                      "children": [
                        {
                          "type": "button",
                          "id": "decrease_quantity",
                          "properties": {
                            "text": "-",
                            "backgroundColor": "#E0E0E0",
                            "textColor": "#212121",
                            "width": 40,
                            "height": 40
                          },
                          "action": {
                            "type": "decrease_quantity"
                          }
                        },
                        {
                          "type": "sizedbox",
                          "properties": {
                            "width": 16
                          }
                        },
                        {
                          "type": "text",
                          "id": "quantity_display",
                          "properties": {
                            "text": "1",
                            "fontSize": 18,
                            "fontWeight": "bold",
                            "color": "#212121"
                          }
                        },
                        {
                          "type": "sizedbox",
                          "properties": {
                            "width": 16
                          }
                        },
                        {
                          "type": "button",
                          "id": "increase_quantity",
                          "properties": {
                            "text": "+",
                            "backgroundColor": "#2196F3",
                            "textColor": "#FFFFFF",
                            "width": 40,
                            "height": 40
                          },
                          "action": {
                            "type": "increase_quantity"
                          }
                        }
                      ]
                    },
                    {
                      "type": "sizedbox",
                      "properties": {
                        "height": 32
                      }
                    },
                    {
                      "type": "row",
                      "properties": {
                        "mainAxisAlignment": "spacebetween"
                      },
                      "children": [
                        {
                          "type": "expanded",
                          "children": [
                            {
                              "type": "button",
                              "id": "add_to_cart",
                              "properties": {
                                "text": "Add to Cart",
                                "backgroundColor": "#2196F3",
                                "textColor": "#FFFFFF",
                                "height": 48
                              },
                              "action": {
                                "type": "add_to_cart"
                              }
                            }
                          ]
                        },
                        {
                          "type": "sizedbox",
                          "properties": {
                            "width": 16
                          }
                        },
                        {
                          "type": "button",
                          "id": "favorite_button",
                          "properties": {
                            "text": "♡",
                            "backgroundColor": "#FFFFFF",
                            "textColor": "#FF5722",
                            "width": 48,
                            "height": 48,
                            "borderColor": "#FF5722",
                            "borderWidth": 1
                          },
                          "action": {
                            "type": "toggle_favorite"
                          }
                        }
                      ]
                    },
                    {
                      "type": "sizedbox",
                      "properties": {
                        "height": 24
                      }
                    },
                    {
                      "type": "text",
                      "properties": {
                        "text": "Related Products",
                        "fontSize": 18,
                        "fontWeight": "w600",
                        "color": "#212121"
                      }
                    },
                    {
                      "type": "sizedbox",
                      "properties": {
                        "height": 16
                      }
                    },
                    {
                      "type": "productlist",
                      "id": "related_products",
                      "properties": {
                        "title": "",
                        "isHorizontal": true,
                        "limit": 5
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
