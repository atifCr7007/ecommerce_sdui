{
  "screenId": "bookmarks",
  "title": "My Bookmarks",
  "theme": {
    "primaryColor": "#9C27B0",
    "secondaryColor": "#E1BEE7",
    "backgroundColor": "#FFFFFF",
    "textColor": "#212121"
  },
  "components": [
    {
      "type": "column",
      "properties": {
        "mainAxisAlignment": "start",
        "crossAxisAlignment": "stretch"
      },
      "children": [
        {
          "type": "padding",
          "properties": {
            "padding": {
              "all": 16
            }
          },
          "children": [
            {
              "type": "row",
              "properties": {
                "mainAxisAlignment": "spacebetween",
                "crossAxisAlignment": "center"
              },
              "children": [
                {
                  "type": "text",
                  "properties": {
                    "text": "My Bookmarks",
                    "fontSize": 24,
                    "fontWeight": "bold",
                    "color": "#212121"
                  }
                },
                {
                  "type": "text",
                  "id": "bookmarks_count",
                      "properties": {
                        "text": "0 items",
                        "fontSize": 14,
                        "color": "#757575"
                      }
                    }
                  ]
                }
              ]
            },
            {
              "type": "expanded",
              "children": [
                {
                  "type": "scrollview",
                  "properties": {
                    "scrollDirection": "vertical"
                  },
                  "children": [
                    {
                      "type": "container",
                      "id": "bookmarks_grid_container",
                      "properties": {
                        "minHeight": 200,
                        "padding": {
                          "left": 16,
                          "right": 16,
                          "bottom": 16
                        }
                      },
                      "children": [
                        {
                          "type": "bookmarks_grid",
                          "id": "bookmarks_grid"
                        }
                      ]
                    },
                    {
                      "type": "container",
                      "id": "empty_bookmarks_state",
              "properties": {
                "padding": {
                  "all": 32
                },
                "alignment": "center"
              },
              "children": [
                {
                  "type": "column",
                  "properties": {
                    "mainAxisAlignment": "center",
                    "crossAxisAlignment": "center"
                  },
                  "children": [
                    {
                      "type": "icon",
                      "properties": {
                        "icon": "favorite_border",
                        "size": 64,
                        "color": "#BDBDBD"
                      }
                    },
                    {
                      "type": "sizedbox",
                      "properties": {
                        "height": 16
                      }
                    },
                    {
                      "type": "text",
                      "properties": {
                        "text": "No bookmarks yet",
                        "fontSize": 18,
                        "fontWeight": "w600",
                        "color": "#757575"
                      }
                    },
                    {
                      "type": "sizedbox",
                      "properties": {
                        "height": 8
                      }
                    },
                    {
                      "type": "text",
                      "properties": {
                        "text": "Start adding products to your favorites",
                        "fontSize": 14,
                        "color": "#9E9E9E"
                      }
                    },
                    {
                      "type": "sizedbox",
                      "properties": {
                        "height": 24
                      }
                    },
                    {
                      "type": "button",
                      "properties": {
                        "text": "Browse Products",
                        "backgroundColor": "#9C27B0",
                        "textColor": "#FFFFFF",
                        "height": 48,
                        "width": 200
                      },
                      "action": {
                        "type": "navigate",
                        "route": "/home"
                      }
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "container",
          "id": "bookmarks_actions",
          "properties": {
            "margin": {
              "left": 16,
              "right": 16,
              "bottom": 16
            },
            "padding": {
              "all": 12
            },
            "backgroundColor": "#FFFFFF",
            "borderRadius": 28,
            "elevation": 8,
            "shadowColor": "#000000",
            "shadowOpacity": 0.15,
            "shadowOffset": {
              "x": 0,
              "y": 4
            },
            "shadowBlurRadius": 12
          },
          "children": [
            {
              "type": "row",
              "properties": {
                "mainAxisAlignment": "spaceevenly",
                "crossAxisAlignment": "center"
              },
              "children": [
                {
                  "type": "button",
                  "id": "clear_bookmarks_button",
                  "properties": {
                    "text": "Clear All",
                    "backgroundColor": "#FF5722",
                    "textColor": "#FFFFFF",
                    "height": 48,
                    "borderRadius": 24,
                    "elevation": 2,
                    "fontSize": 14,
                    "fontWeight": "w600"
                  },
                  "action": {
                    "type": "clear_bookmarks"
                  }
                },
                {
                  "type": "button",
                  "id": "share_bookmarks_button",
                  "properties": {
                    "text": "Share List",
                    "backgroundColor": "#4CAF50",
                    "textColor": "#FFFFFF",
                    "height": 48,
                    "borderRadius": 24,
                    "elevation": 2,
                    "fontSize": 14,
                    "fontWeight": "w600"
                  },
                  "action": {
                    "type": "share_bookmarks"
                  }
                }
              ]
            }
          ]
        }
          ]
        }
      ]
    }
  ]
}
