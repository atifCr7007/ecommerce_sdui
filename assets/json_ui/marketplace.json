{
  "screen": {
    "screenId": "marketplace_screen",
    "title": "Marketplace",
    "theme": {
      "backgroundColor": "#FFFFFF"
    },
    "components": [
      {
        "type": "scroll_view",
        "id": "marketplace_scroll",
        "properties": {
          "scrollDirection": "vertical",
          "padding": {
            "top": 16,
            "bottom": 16,
            "left": 16,
            "right": 16
          }
        },
        "children": [
          {
            "type": "column",
            "id": "marketplace_column",
            "properties": {
              "crossAxisAlignment": "stretch",
              "mainAxisSize": "min",
              "spacing": 24
            },
            "children": [
              {
                "type": "marketplace_header",
                "id": "marketplace_header",
                "properties": {
                  "title": "Discover Amazing Shops",
                  "subtitle": "Find the best products from trusted sellers",
                  "backgroundColor": "#F8F9FA",
                  "borderRadius": 12,
                  "padding": {
                    "all": 20
                  }
                }
              },
              {
                "type": "marketplace_search",
                "id": "marketplace_search",
                "properties": {
                  "placeholder": "Search shops...",
                  "backgroundColor": "#FFFFFF",
                  "borderRadius": 25,
                  "elevation": 2,
                  "padding": {
                    "horizontal": 16,
                    "vertical": 12
                  }
                }
              },
              {
                "type": "marketplace_categories",
                "id": "marketplace_categories",
                "properties": {
                  "title": "Shop Categories",
                  "showAll": true,
                  "scrollDirection": "horizontal",
                  "itemSpacing": 12,
                  "padding": {
                    "vertical": 8
                  }
                }
              },
              {
                "type": "marketplace_featured_shops",
                "id": "featured_shops",
                "properties": {
                  "title": "Featured Shops",
                  "subtitle": "Top-rated shops you'll love",
                  "limit": 5,
                  "scrollDirection": "horizontal",
                  "itemSpacing": 16,
                  "showRating": true,
                  "showVerified": true
                }
              },
              {
                "type": "marketplace_all_shops",
                "id": "all_shops",
                "properties": {
                  "title": "All Shops",
                  "subtitle": "Browse all available shops",
                  "layout": "grid",
                  "columns": 2,
                  "itemSpacing": 16,
                  "showRating": true,
                  "showVerified": true,
                  "showCategory": true
                }
              }
            ]
          }
        ]
      }
    ]
  }
}
